@page
@model CityRealEstate.Pages.PropertyViews.IndexModel

@{
    ViewData["Title"] = "Add New Property";
}

<p>
    <a asp-page="Create"  type="button" class="btn btn-info">Add New Property</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].TypeOfProperty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Dimentions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].PinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Property[0].Rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Property)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfProperty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dimentions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id"  type="button" class="btn btn-info">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id"  type="button" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id"  type="button" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
