                <input asp-for="Property.TypeOfProperty" class="form-control" />
                <span asp-validation-for="Property.TypeOfProperty" class="text-danger"></span>
            </div> <div class="form-group">
                <label asp-for="Property.Dimentions" class="control-label"></label>
                <input asp-for="Property.Dimentions" class="form-control" />
                <span asp-validation-for="Property.Dimentions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.State" class="control-label"></label>
                <input asp-for="Property.State" class="form-control" />
                <span asp-validation-for="Property.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.City" class="control-label"></label>
                <input asp-for="Property.City" class="form-control" />
                <span asp-validation-for="Property.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.PinCode" class="control-label"></label>
                <input asp-for="Property.PinCode" class="form-control" />
                <span asp-validation-for="Property.PinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Rate" class="control-label"></label>
                <input asp-for="Property.Rate" class="form-control" />
                <span asp-validation-for="Property.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" type="button" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
