@page
@model CityRealEstate.Pages.PropertyViews.CreateModel

@{
    ViewData["Title"] = "Add Property";
}

<h4 class="d-flex justify-content-center">Add Property</h4>
<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-6 font-weight-bold">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Property.TypeOfProperty" class="control-label"></label>
                <input asp-for="Property.TypeOfProperty" class="form-control" placeholder="Enter Type Of Property"/>
                <span asp-validation-for="Property.TypeOfProperty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Dimentions" class="control-label"></label>
                <input asp-for="Property.Dimentions" class="form-control" placeholder="Enter Dimentions"/>
                <span asp-validation-for="Property.Dimentions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.State" class="control-label"></label>
                <input asp-for="Property.State" class="form-control" placeholder="Enter State" />
                <span asp-validation-for="Property.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.City" class="control-label"></label>
                <input asp-for="Property.City" class="form-control" placeholder="Enter City"/>
                <span asp-validation-for="Property.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.PinCode" class="control-label"></label>
                <input asp-for="Property.PinCode" class="form-control" placeholder="Enter Pin Code"/>
                <span asp-validation-for="Property.PinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Rate" class="control-label"></label>
                <input asp-for="Property.Rate" class="form-control" placeholder="Enter Rate"/>
                <span asp-validation-for="Property.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" type="button" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
