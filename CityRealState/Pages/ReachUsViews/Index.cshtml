@page
@model CityRealEstate.Pages.ReachUsViews.IndexModel

@{
    ViewData["Title"] = "Reach Us";
}

<h1>Index</h1>

<p>
    <a asp-page="Create"  type="button" class="btn btn-info">Reach Us</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReachUs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReachUs[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReachUs[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReachUs[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReachUs[0].Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ReachUs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id"  type="button" class="btn btn-info">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.id"  type="button" class="btn btn-info">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.id"  type="button" class="btn btn-info">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
