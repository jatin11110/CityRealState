@page
@model CityRealEstate.Pages.BuyPropertyViews.EditModel

@{
    ViewData["Title"] = "Edit Property";
}

<h4 class="d-flex justify-content-center">Edit Property</h4>
<hr />
<div class="d-flex justify-content-center">
    <div class="col-md-6 font-weight-bold">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuyProperty.id" />
            <div class="form-group">
                <label asp-for="BuyProperty.Name" class="control-label"></label>
                <input asp-for="BuyProperty.Name" class="form-control" />
                <span asp-validation-for="BuyProperty.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.Contact" class="control-label"></label>
                <input asp-for="BuyProperty.Contact" class="form-control" />
                <span asp-validation-for="BuyProperty.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.PropertyId" class="control-label"></label>
                <select asp-for="BuyProperty.PropertyId" class="form-control" asp-items="@(new SelectList(Model.properties, "Id","TypeOfProperty"))">
                    <option value="" selected disabled>--Select Car--</option>
                </select>
                <span asp-validation-for="BuyProperty.PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.Dimentions" class="control-label"></label>
                <input asp-for="BuyProperty.Dimentions" class="form-control" />
                <span asp-validation-for="BuyProperty.Dimentions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.State" class="control-label"></label>
                <input asp-for="BuyProperty.State" class="form-control" />
                <span asp-validation-for="BuyProperty.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.City" class="control-label"></label>
                <input asp-for="BuyProperty.City" class="form-control" />
                <span asp-validation-for="BuyProperty.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyProperty.PinCode" class="control-label"></label>
                <input asp-for="BuyProperty.PinCode" class="form-control" />
                <span asp-validation-for="BuyProperty.PinCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" type="button" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
