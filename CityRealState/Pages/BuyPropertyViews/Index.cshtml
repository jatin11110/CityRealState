@page
@model CityRealEstate.Pages.BuyPropertyViews.IndexModel

@{
    ViewData["Title"] = "Add New Property";
}

<p>
    <a asp-page="Create"  type="button" class="btn btn-info">Buy New Property</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].PropertyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].Dimentions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyProperty[0].PinCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BuyProperty)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PropertyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dimentions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinCode)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id"  type="button" class="btn btn-info">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.id"  type="button" class="btn btn-info">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.id"  type="button" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
